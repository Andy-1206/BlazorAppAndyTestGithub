@page "/"
@inject NavigationManager Navigation

<h3>Sign in</h3>

<EditForm Model="@person" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator/>
    <ValidationSummary />

    <div class="form-group">
        <label for="email">email </label>
        <InputText id="email" class="form-control" requierd @bind-Value="person.Email" />
    </div>
     
    <div class="form-group">
        <label for="password">pasword </label>
        <InputText id="password" class="form-control" @bind-Value="person.Password" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</EditForm>

@code {
    private Person person = new Person();

    private void HandleSubmit()
    {
        Navigation.NavigateTo("/success");
    }
}

